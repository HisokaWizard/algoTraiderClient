{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",   
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,                                 
    "sourceMap": true,                                
    "outDir": "./build", 
    "removeComments": true,                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "noImplicitAny": true,                           
    "alwaysStrict": true,                             
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
  },
  "include": ["./src/**/*"],
  "exclude": ["/node_modules"],
}
